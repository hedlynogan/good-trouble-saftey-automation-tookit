<TaskerData sr="" dession="1" tv="6.2.5">
	<Task sr="task1">
		<cdate>1705900000000</cdate>
		<edate>1705900000000</edate>
		<id>1</id>
		<nme>Good Trouble Emergency</nme>
		<pri>100</pri>

		<!-- Action 1: Get GPS Location -->
		<Action sr="act0" ve="7">
			<code>406</code>
			<label>Get GPS Location</label>
			<Str sr="arg0" ve="3">%LOC</Str>
			<Int sr="arg1" val="30"/>
			<Int sr="arg2" val="1"/>
		</Action>

		<!-- Action 2: Variable Split to get Lat/Long -->
		<Action sr="act1" ve="7">
			<code>590</code>
			<label>Split Location into Lat/Long</label>
			<Str sr="arg0" ve="3">%LOC</Str>
			<Str sr="arg1" ve="3">,</Str>
		</Action>

		<!-- Action 3: Set Latitude Variable -->
		<Action sr="act2" ve="7">
			<code>547</code>
			<label>Set Latitude</label>
			<Str sr="arg0" ve="3">%Latitude</Str>
			<Str sr="arg1" ve="3">%LOC1</Str>
			<Int sr="arg2" val="0"/>
			<Int sr="arg3" val="0"/>
			<Int sr="arg4" val="0"/>
			<Int sr="arg5" val="3"/>
		</Action>

		<!-- Action 4: Set Longitude Variable -->
		<Action sr="act3" ve="7">
			<code>547</code>
			<label>Set Longitude</label>
			<Str sr="arg0" ve="3">%Longitude</Str>
			<Str sr="arg1" ve="3">%LOC2</Str>
			<Int sr="arg2" val="0"/>
			<Int sr="arg3" val="0"/>
			<Int sr="arg4" val="0"/>
			<Int sr="arg5" val="3"/>
		</Action>

		<!-- Action 5: Set Emergency Message -->
		<Action sr="act4" ve="7">
			<code>547</code>
			<label>Create Emergency Message</label>
			<Str sr="arg0" ve="3">%EmergencyMsg</Str>
			<Str sr="arg1" ve="3">EMERGENCY ALERT: I need help. My current location is: https://maps.google.com/?q=%Latitude,%Longitude - Please check on me immediately.</Str>
			<Int sr="arg2" val="0"/>
			<Int sr="arg3" val="0"/>
			<Int sr="arg4" val="0"/>
			<Int sr="arg5" val="3"/>
		</Action>

		<!-- Action 6: Send SMS to Contact 1 -->
		<!-- NOTE: Replace CONTACT1_PHONE with actual phone number -->
		<Action sr="act5" ve="7">
			<code>37</code>
			<label>Send SMS to Emergency Contact 1</label>
			<Str sr="arg0" ve="3">CONTACT1_PHONE</Str>
			<Str sr="arg1" ve="3">%EmergencyMsg</Str>
			<Int sr="arg2" val="0"/>
		</Action>

		<!-- Action 7: Send SMS to Contact 2 (Optional) -->
		<!-- NOTE: Replace CONTACT2_PHONE with actual phone number or remove -->
		<Action sr="act6" ve="7">
			<code>37</code>
			<label>Send SMS to Emergency Contact 2</label>
			<Str sr="arg0" ve="3">CONTACT2_PHONE</Str>
			<Str sr="arg1" ve="3">%EmergencyMsg</Str>
			<Int sr="arg2" val="0"/>
		</Action>

		<!-- Action 8: Send SMS to Contact 3 (Optional) -->
		<!-- NOTE: Replace CONTACT3_PHONE with actual phone number or remove -->
		<Action sr="act7" ve="7">
			<code>37</code>
			<label>Send SMS to Emergency Contact 3</label>
			<Str sr="arg0" ve="3">CONTACT3_PHONE</Str>
			<Str sr="arg1" ve="3">%EmergencyMsg</Str>
			<Int sr="arg2" val="0"/>
		</Action>

		<!-- Action 9: Perform Task - Play Audio -->
		<Action sr="act8" ve="7">
			<code>130</code>
			<label>Play Legal Rights Audio</label>
			<Str sr="arg0" ve="3">Good Trouble Audio</Str>
			<Int sr="arg1" val="100"/>
			<Str sr="arg2" ve="3"/>
			<Int sr="arg3" val="0"/>
			<Int sr="arg4" val="0"/>
			<Str sr="arg5" ve="3"/>
		</Action>

		<!-- Action 10: Wait for audio to start -->
		<Action sr="act9" ve="7">
			<code>30</code>
			<label>Wait 2 Seconds</label>
			<Int sr="arg0" val="0"/>
			<Int sr="arg1" val="2"/>
			<Int sr="arg2" val="0"/>
		</Action>

		<!-- Action 11: Start Video Recording -->
		<Action sr="act10" ve="7">
			<code>751</code>
			<label>Start Video Recording</label>
			<Int sr="arg0" val="0"/>
			<Int sr="arg1" val="0"/>
			<Str sr="arg2" ve="3">GoodTrouble_%DATE_%TIME</Str>
			<Int sr="arg3" val="0"/>
			<Int sr="arg4" val="0"/>
		</Action>

		<!-- Action 12: Flash confirmation -->
		<Action sr="act11" ve="7">
			<code>548</code>
			<label>Confirmation Flash</label>
			<Str sr="arg0" ve="3">Emergency alert sent. Recording started.</Str>
			<Int sr="arg1" val="1"/>
		</Action>

	</Task>
</TaskerData>
